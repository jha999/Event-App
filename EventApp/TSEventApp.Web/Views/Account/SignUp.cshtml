@model SignUpViewModel;
@{
    ViewData["Title"] = "Signup";
}
<div class="auth-wrapper pt-4">
    <div class="text-center"><img class="mb-4" src="~/Images/LoginIcon.svg" alt="" width="72" height="57"></div>
    <h3 class="fw-normal text-center">Please Register here</h3>
    <form class="form-signin" asp-action="SignUp">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control input-sm" placeholder="Username..." />
            <label asp-for="UserName" class="text-dark font-weight-bold"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control input-sm" placeholder="Email..." />
            <label asp-for="Email" class="control-label text-dark font-weight-bold"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control input-sm" placeholder="Password..." />
            <label asp-for="Password" class="control-label text-dark font-weight-bold"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ConfirmPassword" class="form-control input-sm" placeholder="Confirm Password..." />
            <label asp-for="ConfirmPassword" class="control-label text-dark font-weight-bold"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
        <div class="text-center font-weight-bold"> Click <a asp-controller="Account" asp-action="Login">here</a> to Login</div>
    </form>

</div>
